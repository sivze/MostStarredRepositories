<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RepoDetailContainer" parent="android:Widget">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/grid_item_padding</item>
        <item name="android:layout_marginLeft">@dimen/grid_item_padding</item>
        <item name="android:layout_marginRight">@dimen/grid_item_padding</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
